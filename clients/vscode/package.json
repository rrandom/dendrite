{
  "name": "dendrite-vscode",
  "displayName": "Dendrite",
  "description": "Dendrite for VS Code",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "aliases": [
          "Markdown",
          "markdown"
        ],
        "extensions": [
          ".md",
          ".markdown"
        ]
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dendriteHierarchy",
          "name": "Dendrite Hierarchy",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "dendrite.refreshHierarchy",
        "title": "Refresh Hierarchy",
        "icon": "$(refresh)"
      },
      {
        "command": "dendrite.renameNote",
        "title": "Rename Note",
        "category": "Dendrite"
      },
      {
        "command": "dendrite.undoRefactor",
        "title": "Undo Last Refactor",
        "category": "Dendrite"
      },
      {
        "command": "dendrite.splitNote",
        "title": "Refactor: Extract to New Note",
        "category": "Dendrite"
      },
      {
        "command": "dendrite.reorganizeHierarchy",
        "title": "Refactor: Reorganize Hierarchy",
        "category": "Dendrite"
      },
      {
        "command": "dendrite.workspaceAudit",
        "title": "Run Workspace Audit",
        "category": "Dendrite"
      },
      {
        "command": "dendrite.createNote",
        "title": "Create New Note",
        "category": "Dendrite"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dendrite.refreshHierarchy",
          "when": "view == dendriteHierarchy",
          "group": "navigation@1"
        },
        {
          "command": "dendrite.undoRefactor",
          "when": "view == dendriteHierarchy",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}