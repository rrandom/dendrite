{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cargo build",
            "command": "cargo",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "build server",
            "dependsOn": "cargo build",
            "windows": {
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}/scripts/build_server.ps1"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "${workspaceFolder}/scripts/build_server.sh"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "${workspaceFolder}/scripts/build_server.sh"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "build and compile",
            "dependsOn": [
                "build server",
                "npm: compile - clients/vscode"
            ],
            "problemMatcher": []
        }
    ]
}

